<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Credentials - <%= name %></title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Favicon -->
    <link
      rel="icon"
      href="https://yt3.googleusercontent.com/IVqzx0L3Ffpapttg-WK5yU9frk4AIVKixHnmmQjQ7RLrt4e66-7Ox6srKG_QVat5ceEq-98-s9s=s160-c-k-c0x00ffffff-no-rj"
      type="image/png"
    />

    <!-- Custom CSS -->
    <style>
      /* Fade-in animation */
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Button animation */
      @keyframes glowing {
        0% {
          box-shadow: 0 0 5px #6366f1;
        }
        50% {
          box-shadow: 0 0 20px #6366f1;
        }
        100% {
          box-shadow: 0 0 5px #6366f1;
        }
      }

      body {
        animation: fadeIn 0.8s ease-in-out;
      }

      .glowing-btn {
        animation: glowing 1.5s infinite alternate;
      }
    </style>
  </head>
  <body
    class="bg-black min-h-screen flex flex-col items-center justify-center p-6"
  >
    <!-- Back to Dashboard Button -->
    <div class="absolute top-6 left-6">
      <a href="/dashboard">
        <button
          class="glowing-btn bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-bold py-3 px-6 rounded-lg transition-transform duration-300 hover:scale-105"
        >
          Back to Dashboard
        </button>
      </a>
    </div>

    <!-- Credentials Container -->
    <div
      class="bg-gray-900 p-8 rounded-lg shadow-lg text-center text-white w-full max-w-md"
    >
      <h1 class="text-2xl font-semibold mb-4">Your Credentials</h1>

      <!-- User Info -->
      <p class="text-lg font-medium">Username: <%= user.username %></p>
      <p class="text-lg font-medium">Email: <%= user.email %></p>

      <!-- Reset Password Button -->
      <form action="/credentials/reset" method="POST" class="mt-6">
        <button
          type="submit"
          class="glowing-btn w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold py-3 rounded-lg transition-transform duration-300 hover:scale-105"
        >
          Reset Password
        </button>
      </form>

      <!-- Success/Error Message -->
      <div class="mt-4">
        <% if (req.query.msg === "PasswordReset") { %>
        <p class="text-green-400 font-semibold">
          Your password has been reset. Check your email.
        </p>
        <% } else if (req.query.err) { %>
        <p class="text-red-500 font-semibold">Error: <%= req.query.err %></p>
        <% } %>
      </div>
    </div>
  </body>
</html>
