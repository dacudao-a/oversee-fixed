<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>your file contents - Executorx Hosting Panel</title>
    <link rel="icon" type="image/png" href="https://yt3.googleusercontent.com/IVqzx0L3Ffpapttg-WK5yU9frk4AIVKixHnmmQjQ7RLrt4e66-7Ox6srKG_QVat5ceEq-98-s9s=s160-c-k-c0x00ffffff-no-rj">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>

<%- include('../components/template') %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/theme/material-darker.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/javascript/javascript.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/htmlmixed/htmlmixed.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/css/css.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/python/python.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.65.13/mode/xml/xml.min.js"></script>

<main id="content">
    <style>
        .editor-container {
            width: 100%;
            height: 70vh;
            border: 1px solid #444;
            border-radius: 6px;
            background-color: #1e1e1e;
            overflow: hidden;
        }

        .editor-actions {
            display: flex;
            gap: 10px;
            margin-top: 10px;
        }

        .editor-button {
            padding: 8px 16px;
            border-radius: 6px;
            font-size: 14px;
            font-weight: 500;
            transition: all 0.2s;
            cursor: pointer;
        }

        .editor-button.primary {
            background-color: #4f46e5;
            color: white;
        }

        .editor-button.primary:hover {
            background-color: #4338ca;
        }

        .editor-button.secondary {
            background-color: #27292c;
            color: white;
        }

        .editor-button.secondary:hover {
            background-color: #3a3a3a;
        }

        select {
            background: #27292c;
            color: white;
            border: none;
            padding: 8px;
            border-radius: 6px;
        }
    </style>

    <%- include('../components/instance') %>

    <% 
        let formattedFile = req.query.path ? '/' + req.params.file : req.params.file;
        let query = req.query.path ? '?path=' + req.query.path : '';

        const languages = {
            'js': 'javascript',
            'html': 'htmlmixed',
            'css': 'css',
            'py': 'python',
            'xml': 'xml',
            'txt': 'plaintext'
        };

        const fileExtension = formattedFile.split('.').pop();
        const defaultLanguage = languages[fileExtension] || 'plaintext';
    %>

    <h1 class="text-neutral-200 text-md px-8">
        <a class="text-neutral-400 hover:text-neutral-300 transition" href="../?path=<%= req.query.path %>">
            /app/data/<%= req.query.path %>
        </a><%= formattedFile %>
    </h1>

    <div class="flex items-center gap-4 p-4">
        <label for="languageSelect" class="text-white">Language:</label>
        <select id="languageSelect" onchange="changeLanguage(this.value)">
            <% for (const [key, value] of Object.entries(languages)) { %>
                <option value="<%= value %>" <%= value === defaultLanguage ? "selected" : "" %>><%= key.toUpperCase() %></option>
            <% } %>
        </select>
    </div>

    <div class="editor-container">
        <textarea id="editor"><%= file %></textarea>
    </div>

    <div class="editor-actions">
        <button id="saveButton" class="editor-button primary" onclick="saveFile()">Save & Exit</button>
    </div>

    <script>
        let editor = CodeMirror.fromTextArea(document.getElementById("editor"), {
            mode: "<%= defaultLanguage %>",
            theme: "material-darker",
            lineNumbers: true,
            autoCloseBrackets: true,
            matchBrackets: true
        });

        function saveFile() {
            var button = document.getElementById("saveButton");
            button.disabled = true;
            button.textContent = "Saving...";

            var fileContent = editor.getValue();
            var filename = "<%= req.params.file %>";
            var instanceId = "<%= req.params.id %>";
            const redirectURL = `/instance/${instanceId}/files/`;

            fetch(`/instance/${instanceId}/files/edit/${filename}<%= query %>`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ content: fileContent })
            })
            .then(response => response.json())
            .then(data => {
                if (data && data.message) {
                    button.textContent = "Saved!";
                    setTimeout(() => { window.location.href = redirectURL; }, 1000);
                } else {
                    alert("Error saving file");
                    button.disabled = false;
                    button.textContent = "Save & Exit";
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert("Failed to save the file.");
                button.disabled = false;
                button.textContent = "Save & Exit";
            });
        }

        function changeLanguage(lang) {
            editor.setOption("mode", lang);
        }
    </script>
</main>

<%- include('../components/footer') %>
